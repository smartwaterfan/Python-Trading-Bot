import yfinance as yf

# Define the ticker symbol
ticker_symbol = "TSLA"

# Get ticker data
ticker = yf.Ticker(ticker_symbol)

# Get today's historical data
data = ticker.history(period="1d")

# Get current price (closing price of the day)
current_price = data["Close"].iloc[-1]

# Get day's high and low
day_high = data["High"].iloc[-1]
day_low = data["Low"].iloc[-1]

# Print results
print(f"The current price of {ticker_symbol} is ${current_price:.2f}")
print(f"Today's high: ${day_high:.2f}")
print(f"Today's low: ${day_low:.2f}")
